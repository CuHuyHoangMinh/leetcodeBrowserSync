<Configuration status="debug" name="baeldung" packages="">
	<Appenders>
		<File name="fout" fileName=".\myApp.log" append="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="stdout" />
			<AppenderRef ref="fout" />
		</Root>
	</Loggers>
</Configuration>
