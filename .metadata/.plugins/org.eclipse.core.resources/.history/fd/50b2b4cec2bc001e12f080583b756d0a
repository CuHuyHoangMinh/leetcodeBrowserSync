<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<File name="FILE_OUT" fileName="logs/myApp.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
		
		<File name="submission_dump" fileName="logs/submission_dump.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="FILE_OUT" />
		</Root>
		<logger name="submission" level="DEBUG" additivity="false">
			<AppenderRef ref="submission_dump" />
		</logger>
	</Loggers>
</Configuration>
